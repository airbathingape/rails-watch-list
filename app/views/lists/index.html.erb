<div class="container mt-3">
  <div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <div class="container">
      <h1 class="text-start">Categories</h1>

      <%# <p><%= link_to "new list", new_list_path(@list), class: "btn btn-gradient mt-3" %>
    </div>
  </div>
  <div class="cards mt-3">
    <% @lists.each do |list| %>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= list.photo.attached? ? cl_image_path(list.photo.key)  : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
        <p><%= link_to list.name, list_path(list) %></p>
      </div>
    <% end %>
  </div>
</div>

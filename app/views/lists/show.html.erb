<div class="container">
  <div class="banner mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key)  : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>);">
    <div class="container">
      <h1 class="m-3">
        <%= @list.name %>
      </h1>
      <span class="m-3">
        <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-gradient' %>
      </span>
    </div>
  </div>
  <div class="cards mt-3">
    <%@list.bookmarks.each do |bookmark|  %>
      <div class="card-trip rounded-3">
        <img src="<%= bookmark.movie.poster_url %>" />
        <div class="card-trip-infos">
          <div>
            <h2>
              <%= bookmark.movie.title %>
            </h2>
            <p>
              <%= bookmark.comment %>
            </p>
          </div>
          <h2 class="card-trip-pricing">
            <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete?" } do %>
            <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
